generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  fullname String 
  email    String @unique
  password String
  role     UserRole @default(PATIENT)  // Add role field
  createdAt DateTime @default(now())
  
  // Doctor-specific fields (only used if role = DOCTOR)
  speciality   String?
  experience   Int?
  consultationFee Decimal? @db.Decimal(10, 2)
}

enum UserRole {
  PATIENT
  DOCTOR
  ADMIN
}